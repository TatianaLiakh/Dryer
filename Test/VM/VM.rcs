PROGR VERIFIER
{
	TACT 50;
	CONST ON 1;
	CONST OFF 0;
	CONST AlgorithmDelay 40; /*2 сек*/
	CONST TestIdling 100;

	/*Набор команд для VERIFIER(блок верификации)*/
	ENUM 
	{
		D2V_TEST_NORMAL_TURN_ON, 
		D2V_TEST_NORMAL_TURN_OFF, 
		D2V_FINISH_VERIFICATION
	};

	/*Набор команд для DISPATCHER(блок управления сценарием) от VERIFIER(блока верификации)*/
	ENUM
	{
		V2D_START_VERIFICATION
	};

	/*Набор Команд для GUI */
	ENUM
	{
		V2GUI_TEST_PASSED_NORMAL_TURN_ON, 
		V2GUI_TEST_FAILED_NORMAL_TURN_ON,
		V2GUI_START_TEST_TURN_ON,
		V2GUI_TEST_PASSED_NORMAL_TURN_OFF, 
		V2GUI_TEST_FAILED_NORMAL_TURN_OFF,
		V2GUI_START_TEST_TURN_OFF,
		V2GUI_END_VERIFICATION
	};


	INPUT  LOG_VERIFIER_INPUT_PORT 0 0 8; /* имя, базовый адрес, доп. адр. порта, 8бит */
	INPUT  LOG_VERIFIER_OUTPUT_PORT  0 1 8; /* имя, базовый адрес, доп. адр. порта, 8бит */
	
	PROC Init
	{
				
		STATE Start
		{

			STOP;
		}
	} 

	
	
}



