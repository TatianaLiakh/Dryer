   50                  INT OFF_counter LOCAL;
   51                  STATE Init {
   52                      S_HANDS = ON; 
   53                      OFF_counter = 1; 
   54                      SET NEXT;
   55                  }
   56          		#C OFF_counter++; 
   57                  STATE Off {
   58                      S_HANDS = OFF;
   59                      TIMEOUT OFF_counter {
   60                          OFF_counter++; 
   61                          SET NEXT;
   62                      }
   63                  }
   64                  STATE On {
   65                      S_HANDS = ON; 
