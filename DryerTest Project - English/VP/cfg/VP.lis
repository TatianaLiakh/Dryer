    1          PROGR Plant {
    2              TACT 100; /* 100 ms */
    3              CONST ON 1;
    4              CONST OFF 0;
    5          	CONST MAX_LIMIT 10;
    6          
    7          /*Набор команд для ВОУ*/
    8          ENUM
    9          {
   10          	SCM2VP_INSERT_HANDS,
   11          	SCM2VP_TAKE_AWAY_HANDS
   12          };
   13           
   14              FUNCTION INT GetMessageFromScenariousBlock(VOID);
   15              FUNCTION INT GetMessageCodeFromScenariousBlock(VOID);
